#clearance.password-reset
  .reset-pw
    %h2= t(".title")
    %p= t(".description")
    = form_for :password, url: passwords_path do |form|
      .text-field
        = form.label :email
        = form.text_field :email, type: 'email', placeholder: 'Enter your email', class: 'reset-input'
      .submit-field
        = form.submit 'Reset Password', class: "reset-pw-button"
