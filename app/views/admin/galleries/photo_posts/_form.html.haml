= form_for [:admin, @gallery, @photo_post] do |f|
  - if @photo_post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@photo_post.errors.count, "error")} prohibited this photo_post from being saved:"
      %ul
        - @photo_post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :image  
    = f.file_field :image, placeholder: "Image"
    = f.hidden_field :image_cache
    = image_tag @photo_post.image
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'
