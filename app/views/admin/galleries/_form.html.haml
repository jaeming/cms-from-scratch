.admin-form-card
  = form_for [:admin, @gallery], html: {class: "pure-form pure-form-aligned"} do |f|
    - if @gallery.errors.any?
      #error_explanation
        %h2= "#{pluralize(@gallery.errors.count, "error")} prohibited this page from being saved:"
        %ul
          - @gallery.errors.full_messages.each do |msg|
            %li= msg
    %fieldset
      .pure-control-group
        = f.label :title
        = f.text_field :title, size: "60x1"
      .pure-control-group
        = f.label :description
        = f.text_area :description, size: "60x6"
      .actions.save-button-centered
        = f.submit 'Save', class: "admin-button__large"
