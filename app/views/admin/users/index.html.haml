.admin-container
  %h2.admin-title
    = fa_icon "user-plus", text: 'Users'
    - if admin?
      = link_to 'Add User', new_admin_user_path, class: "admin-button__new"
  %br
  %table.admin-table
    %thead
      %tr
        %th
        %th Name
        %th Email
        %th.admin-table-center Show
        %th.admin-table-center Edit
        - if admin?
          %th.admin-table-center Delete
    %tbody
      = render @users
