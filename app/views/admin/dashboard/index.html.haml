      / /.main-dashboard-card main-dashboard-card--blue-centered
    .columns-3
      = link_to admin_tags_path, class: "main-dashboard-card main-dashboard-card--blue-centered main-dashboard-card--animate-up" do
        .main-dashboard-card__front
          %i.main-dashboard-card__icon.fa.fa-tags
          .main-dashboard-card__data Tags
        / /.main-dashboard-card__front
        .main-dashboard-card__back
          .main-dashboard-card__action
            Edit
          / /.main-dashboard-card__action
        / /.main-dashboard-card__back
      / /.main-dashboard-card main-dashboard-card--blue-centered
  / /.main-dashboard-card-wrap
