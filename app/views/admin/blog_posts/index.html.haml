%h2 blog
= link_to 'New Blog Post', new_admin_blog_post_path
- @blog_posts.each do |blog_post|
  %h2
    = blog_post.title
  %p
    = raw blog_post.body
  %p
    = link_to 'Edit', edit_admin_blog_post_path(blog_post)
    = link_to 'Show', blog_post_path(blog_post), target: "_blank"
    = link_to 'Destroy', [:admin, blog_post], :method => :delete, :data => { :confirm => 'Are you sure?' }
  .tags
    = raw tag_links(blog_post.all_tags)
    %small = "Created #{time_ago_in_words(blog_post.created_at)} ago"
