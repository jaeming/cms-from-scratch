= form_for [:admin, @blog_post] do |f|
  - if @blog_post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@blog_post.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @blog_post.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.cktext_area :body, :class => 'someclass'
  .field
    = f.label 'tags'
    = f.text_field :all_tags, placeholder: "Tags"
  .actions
    = f.submit 'Save'
