= form_for [:admin, @tag] do |f|
  - if @tag.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tag.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @tag.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :topic
    = f.text_field :topic
  .actions
    = f.submit 'Save'
