.admin-form-card
  = form_for [:admin, @tag], html: {class: "pure-form pure-form-aligned"} do |f|
    - if @tag.errors.any?
      #error_explanation
        %h2= "#{pluralize(@tag.errors.count, "error")} prohibited this page from being saved:"
        %ul
          - @tag.errors.full_messages.each do |msg|
            %li= msg
    %fieldset
      .pure-control-group
        = f.label :topic
        = f.text_field :topic, size: '60x1'
      .actions.save-button-centered
        = f.submit 'Save', class: "admin-button__large"
