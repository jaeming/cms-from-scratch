%h1 Listing pages

%table
  %thead
    %tr
      %th Title
      %th Body
      %th Tags
      %th
      %th
      %th

  %tbody
    - @pages.each do |page|
      %tr
        %td= page.title
        %td= truncate_html(raw(page.body), length: 150, omission: '...(continued)')
        %td= raw tag_links(page.all_tags)
        %td= link_to 'Show', page
        %td= link_to 'Edit', edit_page_path(page)
        %td= link_to 'Destroy', page, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Page', new_page_path
