= form_for @page do |f|
  - if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.cktext_area :body, :class => 'someclass', :ckeditor => {:language => 'us'}
  .field
    = f.label 'tags'
    = f.text_field :all_tags, placeholder: "Tags"
  .actions
    = f.submit 'Save'
