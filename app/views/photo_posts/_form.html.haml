= form_for @photo_post do |f|
  - if @photo_post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@photo_post.errors.count, "error")} prohibited this photo_post from being saved:"
      %ul
        - @photo_post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :published
    = f.check_box :published
  .field
    = f.label :references
    = f.text_field :references
  .actions
    = f.submit 'Save'
